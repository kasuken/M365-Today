@using M365.Today.Services;
@using Microsoft.AspNetCore.Components.Authorization;
@using Microsoft.Graph
@using TimeZoneConverter

@using Microsoft.Fast.Components.FluentUI

@inject M365.Today.Services.GraphClientFactory clientFactory

@if (isLoading)
{
    <FluentProgressRing></FluentProgressRing>
}

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? authenticationStateTask { get; set; }

    private GraphServiceClient? graphClient;
    private IList<Message> messages = new List<Message>();
    private string? dateTimeFormat;

    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        if (authenticationStateTask == null)
        {
            throw new AuthenticationException(new Error
                {
                    Message = "Unable to access authentication state"
                });
        }

        graphClient = clientFactory.GetAuthenticatedClient();

        messages = await graphClient.Me.Messages.Request().OrderBy("receivedDateTime desc").GetAsync();

        isLoading = false;
    }
}